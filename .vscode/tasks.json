{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build:todoapi",
      "command": "dotnet",
      "type": "process",
      "args": ["build", "${workspaceFolder}/src/TodoAPI/TodoAPI.csproj"],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "publish:todoapi",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/src/TodoAPI/TodoAPI.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary;ForceNoAlign"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "watch:todoapi",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/src/TodoAPI/TodoAPI.csproj"
      ],
      "problemMatcher": "$msCompile"
    }
  ]
}
