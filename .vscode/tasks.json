{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build:todoapi",
      "command": "dotnet",
      "type": "process",
      "args": ["build", "${workspaceFolder}/src/TodoAPI/TodoAPI.csproj"],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "publish:todoapi",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/src/TodoAPI/TodoAPI.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary;ForceNoAlign"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "watch:todoapi",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/src/TodoAPI/TodoAPI.csproj"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "test_coverage:todoapi_unit_test",
      "command": "dotnet",
      "type": "process",
      "args": [
        "test",
        "${workspaceFolder}/test/TodoAPI.UnitTest/TodoAPI.UnitTest.csproj",
        "--collect",
        "XPlat Code Coverage"
      ],
      "problemMatcher": "$msCompile",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "test_coverage:todoapi_integration_test",
      "command": "dotnet",
      "type": "process",
      "args": [
        "test",
        "${workspaceFolder}/test/TodoAPI.IntegrationTest/TodoAPI.IntegrationTest.csproj",
        "--collect",
        "XPlat Code Coverage"
      ],
      "problemMatcher": "$msCompile",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "report:coverage",
      "command": "powershell",
      "type": "process",
      "args": [
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}/.cursor/skills/backend-coverage-report/scripts/report-coverage.ps1"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "test:coverage:report",
      "dependsOn": ["test_coverage:todoapi_unit_test", "test_coverage:todoapi_integration_test", "report:coverage"],
      "dependsOrder": "sequence",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}
