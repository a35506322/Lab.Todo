{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "TodoAPI.HTTPS",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build:todoapi",
      "program": "${workspaceFolder}/src/TodoAPI/bin/Debug/net10.0/TodoAPI.dll",
      "cwd": "${workspaceFolder}/src/TodoAPI",
      "console": "integratedTerminal",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
        "uriFormat": "%s/scalar"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "https://localhost:7119;http://localhost:5166"
      }
    }
  ]
}
